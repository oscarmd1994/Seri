
<div class="container bg-white pb-3 rounded font-labels">
    <div class="border-bottom border-secondary pt-4 pb-2 font-weight-bold d-flex justify-content-between"> <div>Creditos Infonavit del empleado : </div><strong class="font-button" id="EmpDes"></strong><div class="btn btn-info btn-sm font-labels" id="btn-cambiar-empleado" data-toggle="modal" data-target="#modalLiveSearchEmpleado" title="Cambia de usuario"><i class="fas fa-users"></i></div></div>
    <div class="row">
        <div class="col-md-6  rounded">
            <form action="#" method="post" class="bg-light px-3 py-3 rounded" id="frmCreditos">
                <div class="form-group row">
                    <div class="form-group col-md-12">
                        <label for="">Tipo de descuento</label>
                        <select class="form-control font-labels custom-select" id="inTipoDescuento" name="inMotivoAusentismo" required>
                            <option value="">Selecciona</option>
                            <option value="Cueota Fija">Cuota Fija</option>
                            <option value="Porcentaje">Porcentaje</option>
                            <option value="N veces el Sal. Minimo">N veces el Sal. Minimo</option>
                            <option value="Cuota fija sobre UMA">Cuota fija sobre UMA</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    @*<label for="custom-switch">Aplica seguro vivienda</label>*@
                    <div class="custom-control custom-switch">
                        <input type="checkbox" class="custom-control-input" id="inAplicaSeguro" name="inAplicaSeguro">
                        <label class="custom-control-label" for="inAplicaSeguro">Aplica seguro vivienda</label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="form-group col-md-6">
                        <label for="inDescuento">Descuento</label>
                        <input class="form-control" type="text" name="inDescuento" id="inDescuento" placeholder="Ingresa el descuento a aplicar" autocomplete="off" required />
                    </div>
                    <div class="form-group col-md-6">
                        <label for="inNoCredito">No de Crédito</label>
                        <input class="form-control" type="text" name="inNoCredito" id="inNoCredito" placeholder="Ingresa el No de credito" required />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="form-group col-md-6">
                        <label for="inFechaAprovacionCredito">Fecha de aprovación del crédito</label>
                        <div class="input-group">
                            <input type="date" name="inFechaAprovacionCredito" id="inFechaAprovacionCredito" class="form-control font-labels" required />
                            <div class="input-group-prepend">
                                <div class="input-group-text " id=""><span class="far fa-calendar-alt"></span></div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="inDescontar">Descontar</label>
                        <select class="form-control font-labels custom-select" id="inDescontar" name="inDescontar" required>
                            <option value="">Selecciona</option>
                            <option>En cada periodo</option>
                            <option>En 1er periodo de mes</option>
                            <option>En ultimo periodo del mes</option>
                        </select>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="form-group col-md-6">
                        <label for="inFechaAusentismo">Fecha de baja del crédito</label>
                        <div class="input-group">
                            <input type="date" name="inFechaBajaCredito" id="inFechaBajaCredito" value="" class="form-control font-labels" required />
                            <div class="input-group-prepend">
                                <div class="input-group-text " id=""><span class="far fa-calendar-alt"></span></div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="inFechaAusentismo">Fecha de reinicio del crédito</label>
                        <div class="input-group">
                            <input type="date" name="inFechaReinicioCredito" id="inFechaReinicioCredito" value="" class="form-control font-labels" required />
                            <div class="input-group-prepend">
                                <div class="input-group-text " id=""><span class="far fa-calendar-alt"></span></div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group col-md-12">
                        <div class="btn btn-primary font-labels col-md-12" id="btnSaveCredito">Registrar credito <i class="far fa-edit"></i></div>
                    </div>

                </div>
            </form>
        </div>
        <div class="col-md-6">
            <table class="table table-sm font-labels" id="tabCreditos">
                <thead>
                    <tr>
                        <th scope="col">No Crédito</th>
                        <th scope="col">Tipo Descuento</th>
                        <th scope="col">Descuento</th>
                        <th scope="col">Fecha Baja</th>
                        <th scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody id="tcbody">
                </tbody>
            </table>
        </div>
    </div>




</div>

@* MODAL DE LIVE SEARCH EMPLEADO *@
<!-- Modal -->
<div class="modal fade" id="modalLiveSearchEmpleado" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title font-labels" id="staticBackdropLabel">Busca el empleado</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="search-box col-md-12">

                        <label for="inputSearchEmpleados" class="font-labels">Escribe el nombre del empleado que buscas</label>
                        <input type="text" name="inputSearchEmpleados" id="inputSearchEmpleados" placeholder="Escriba el nombre del empleado" class=" form-control" autocomplete="off" />
                        <div id="resultSearchEmpleados" name="resultSearchEmpleados" class="list-group"></div>

                    </div>
                    <div class="col-lg-3 col-md-3 col-3 pb-3">

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/main/Creditos.js"></script>