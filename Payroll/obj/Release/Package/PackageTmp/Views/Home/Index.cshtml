@{
    ViewBag.Title = "IPSNet";
    Layout = "~/Views/Shared/_LayoutIni.cshtml";
}

<br />
<br />

<div class="container mt-5">

    <div class="row">
        <div class="col"></div>
        <div class="col-md-8">
            <div class="card shadow rounded">
                <div class="card-body">
                    <h1 class="card-title text-center login-title">
                        <i class="fas fa-money-check-alt col-ico"></i> IPSNet
                    </h1>
                    <hr />
                    <form class="p-5" autocomplete="off">
                        <div class="form-group row">
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text " id="basic-addon1"><i class="fas fa-user col-ico mr-ico-05"></i></span>
                                </div>
                                <input autofocus type="text" class="form-control text-uppercase" id="username" placeholder="Ingresa tu usuario..." />
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text " id="basic-addon1"><i class="fas fa-key col-ico mr-ico-05"></i> </span>
                                </div>
                                <input type="password" class="form-control" id="password" placeholder="INGRESA TU CONTRASEÑA..." />
                            </div>
                        </div>
                        <div class="form-group text-center mt-5 mb-0 row">
                            
                                <button type="button" class="btn btn-sm btn-block col-btn-login font-button" id="btnlogin">
                                    Ingresar <i class="fas fa-sign-in-alt ml-ico-05"></i>
                                </button>
                            
                        </div>
                        <div class="form-group row mt-5 d-none" id="msjmaysact">
                            <div class="col-md-12 text-center">
                                <span class="badge badge-light p-2 col-ico rounded animated fadeIn btn-block font-weight-bold">
                                    La tecla mayusculas esta activada
                                </span>
                            </div>
                        </div>
                        <div class="form-group text-center mt-5 mb-0" id="diverror">
                            <p class="text-danger font-size-footer" id="msgerror"></p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col"></div>
    </div>
</div>
<br />
<script type="text/javascript" src="~/Scripts/login.js"></script>