<div class="container bg-white pt-2 font-labels">
    <div class="border-bottom border-secondary pt-4 pb-2 font-weight-bold d-flex justify-content-between"><div>Registrar Incidencia a empleado : </div><strong class="font-button" id="EmpDes"></strong><div class="btn btn-info btn-sm font-labels" id="btn-cambiar-empleado" title="Cambia de usuario"><i class="fas fa-users"></i></div></div>
    <div class="form-group">
        <!--<div class="d-flex justify-content-between font-labels">


        <div class="btn btn-light font-labels" data-toggle="collapse" data-target="#incidenciasCollapse">Agregar <i class="text-success fas fa-plus-circle"></i></div>
        </div>-->


        <div class="form-group col-md-12 row">
            <div class="form-group col-md-6">
                <div class="collapse show" id="incidenciasCollapse">
                    <form action="#" id="frmIncidencias" class="font-labels">
                        <div class="font-labels font-weight-bold pb-3">Nueva Incidencia</div>
                        <div class="form-group row">
                            <div class="form-group col-md-6">
                                <label>Concepto *</label>
                                <select class="custom-select font-labels" id="inConcepto_incidencia" name="inConcepto_incidencia">

                                </select>
                            </div>
                            <div class="form-group col-md-6">
                                <label>Renglón *</label>
                                <input type="text" name="inRenglon" id="inRenglon" class="form-control disabled" placeholder="#"/>
                            </div>
                            <div class="form-group col-md-6">
                                <label>Cantidad *</label>
                                <input type="text" name="inCantidad" id="inCantidad" class="form-control" placeholder="$ 0000.00"/>
                            </div>
                            <div class="form-group col-md-6">
                                <label>Plazos *</label>
                                <input type="text" name="inPlazos" id="inPlazos" class="form-control" placeholder="No. de periodos "/>
                            </div>
                            <div class="form-group col-md-6">
                                <label>Leyenda</label>
                                <input type="text" name="inLeyenda" id="inLeyenda" class="form-control" />
                            </div>
                            <div class="form-group col-md-6">
                                <label>Referencia</label>
                                <input type="text" name="inReferencia" id="inReferencia" class="form-control" />
                            </div>
                            <div class="form-group col-md-6">
                                <label>Fecha de Aplicacion *</label>
                                <input type="date" name="inFechaA" id="inFechaA" class="form-control" />
                            </div>
                            <div class="form-group col-md-12">
                                <label class="text-muted" style="font-size:smaller;">* Campos obligatorios</label>
                            </div>
                            <div class="d-flex justify-content-end col-md-12">
                                <div class="btn btn-primary rounded m-1" title="Guardar" id="btnSaveIncidencias"><i class="fas fa-save"></i></div>
                                <div class="btn btn-warning rounded m-1" title="Limpiar Formulario" id="btnClearIncidencias"><i class="far fa-trash-alt"></i></div>
                                <div class="btn btn-danger rounded m-1" title="Editar Registro" id="btnEditIncidencias"><i class="far fa-edit"></i></div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="form-group col-md-6">
                <table class="table table-sm font-labels border-top-0">
                    <thead class="">
                        <tr>
                            <th>Concepto</th>
                            <th>Renglon</th>
                            <th>Cantidad</th>
                            <th>Plazos</th>
                            <th>Leyenda</th>
                            <th>Fecha</th>
                        </tr>
                    </thead>
                    <tbody id="tabIncidenciasBody">
                    </tbody>
                </table>
            </div>
        </div>


    </div>
</div>
@* MODAL DE LIVE SEARCH EMPLEADO *@
